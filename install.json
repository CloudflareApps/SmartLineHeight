{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ],
    "body": []
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "advancedOptions": {
        "order": 1,
        "title": "Show advanced options",
        "type": "boolean",
        "default": false
      },
      "selectors": {
        "order": 1,
        "showIf": {
          "advancedOptions": true
        },
        "title": "Elements",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "selector": {
              "order": 1,
              "title": "Selector",
              "description": "Select the element you would like to make readable.",
              "type": "string",
              "format": "selector"
            }
          }
        },
        "default": [
          {
            "selector": "address"
          },
          {
            "selector": "blockquote"
          },
          {
            "selector": "footer"
          },
          {
            "selector": "h1"
          },
          {
            "selector": "h2"
          },
          {
            "selector": "h3"
          },
          {
            "selector": "h4"
          },
          {
            "selector": "h5"
          },
          {
            "selector": "h6"
          },
          {
            "selector": "header"
          },
          {
            "selector": "li"
          },
          {
            "selector": "q"
          },
          {
            "selector": "p"
          }
        ]
      }
    }
  }
}
