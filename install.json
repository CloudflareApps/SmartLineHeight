      {
        "type": "script",
        "src": "./build/app.js"
      }
    ],
    "body": []
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
